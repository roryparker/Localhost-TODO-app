    <div id="location"></div> <!-- Asks for permission to know your location -->
    <script>
    var div = document.getElementById("location");
      function getLocation() {
          if (navigator.geolocation) {
              navigator.geolocation.getCurrentPosition(showPosition, showError);
            } else {
                div.innerHTML = "The Browser Does not Support Geolocation";
            }
        }

      function showPosition(position) {
          console.log(div.innerHTML = "Latitude: " + position.coords.latitude + "<br>Longitude: " + position.coords.longitude);
        }

      function showError(error) {
          if(error.PERMISSION_DENIED){
              console.log(div.innerHTML = "The User have denied the request for Geolocation.");
            }
        }
        
        getLocation(showPosition, showError);
    </script>


</body>
